APP_NAME="MWS"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://example.com
APP_UPLOAD_URL=https://example.com
APP_BASE_PATH=/
APP_TIMEZONE=UTC

# Database (fill with your production DB credentials)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# Optional root credentials for maintenance (leave empty)
DB_ROOT_USERNAME=
DB_ROOT_PASSWORD=

# Session settings
SESSION_COOKIE_NAME=mws_session
SESSION_COOKIE_DOMAIN=
SESSION_SECURE=true
SESSION_SAMESITE=Lax

# Application settings
REMEMBER_ME_DAYS=30

# Rate limits (adjust as needed)
RATE_LIMIT_LOGIN=10
RATE_LIMIT_SUPPORT=5
RATE_LIMIT_WINDOW=300

# Storage settings
STORAGE_DRIVER=local
STORAGE_PATH=storage

# Library path (on production server)
LIBRARY_PATH=/var/lib/mugiwaras/library
LIBRARY_EXTENSIONS=cbz,cbr,epub,zip,pdf

# Mail / support
MAIL_FROM=webmaster@example.com
SUPPORT_EMAIL=support@example.com

# Payment / PIX settings
PIX_KEY=
PIX_BANK=""
PIX_HOLDER=""
PIX_CPF=""

# Content Security Policy (example)
CSP_DEFAULT="default-src 'self'; img-src 'self' data:; style-src 'self' https://cdnjs.cloudflare.com; script-src 'self' https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com data:"

# Secrets
DOWNLOAD_SECRET=
APP_KEY=

# Binaries (optional paths)
PDFTOPPM_BIN=
PDFTOPPM_DPI=150
UNRAR_BIN=
SEVENZIP_BIN=
